---
layout: null
url: /feed-italiano
title: "Feed italiano"
description: "Tutti i contenuti in italiano"
---
<?xml version='1.0' encoding='utf-8'?>
<rss version='2.0' xmlns:content='http://purl.org/rss/1.0/modules/content/' xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:sy="http://purl.org/rss/1.0/modules/syndication/">
	<channel>
		<title>{{ site.title }}</title>
		<description>{{ site.description | xml_escape | strip_newlines }}</description>
		<sy:updatePeriod>{{ "daily" | xml_escape }}</sy:updatePeriod>
		<sy:updateFrequency>{{ "1" | xml_escape }}</sy:updateFrequency>
		<link>https://tommi.space/about</link>
		<atom:link href='{{ site.url }}' rel='self' type='text/xml'/>
		<lastBuildDate>{% for post in site.posts limit:1 %}{{ post.date | date_to_rfc822 }}{% endfor %}</lastBuildDate>
		<image>
			<url>{{ site.image | absolute_url }}</url>
			<title>{{ site.title }}</title>
			<link>{{ site.url }}</link>
		</image>
		<language>it</language>
		<managingEditor>{{ site.email }} ({{ site.author.name }})</managingEditor>
		<webMaster>{{ site.email }} ({{ site.author.name }})</webMaster>
		<copyright>copyright Â© ({{ site.author.name }})</copyright>
		{% for page in site.posts %}
			{% if page.lang == 'it' %}
				<item>
					<title>{{ page.title | xml_escape }}</title>
					<pubDate>{{ page.date | date_to_rfc822 }}</pubDate>
					<dc:creator>{{ site.author | xml_escape }}</dc:creator>
					<description>{{ page.content | xml_escape | strip_newlines }}</description>
					<link>{{ page.url | absolute_url }}</link>
					<guid isPermaLink='true'>{{ page.url | absolute_url }}</guid>
					<image>
						<url>{{ page.image | absolute_url }}</url>
					</image>
				</item>
			{% endif %}
		{% endfor %}
		{% for page in site.notes %}
			{% if page.lang == 'it' %}
				<item>
					<title>{{ page.title | xml_escape }}</title>
					<pubDate>{{ page.date | date_to_rfc822 }}</pubDate>
					<dc:creator>{{ site.author | xml_escape }}</dc:creator>
					<description>{{ page.content | xml_escape | strip_newlines }}</description>
					<link>{{ page.url | absolute_url }}</link>
					<guid isPermaLink='true'>{{ page.url | absolute_url }}</guid>
					<image>
						<url>{{ page.image | absolute_url }}</url>
					</image>
				</item>
			{% endif %}
		{% endfor %}
	</channel>
</rss>